<div class="container">
  <div class="form_container">
    <h2 class="section_title">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field form_group">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form_control" %>
      </div>

      <div class="actions form_group">
        <%= f.submit "Send me reset password instructions", class: "btn" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
