<div class="user_item">
    <img src="<%= user.photo %>" alt="<%= user.name %> photo" class="user_image" />
    <div class="user_details">
      <h2 class="user_name"><%= link_to user.name, user_path(user), class: "user_item_link" %></h2>
      <p class="user_posts_counter">
        <span class="item_counter">
          <b>Number of posts:</b> <%= user.posts_counter %>
        </span>
      </p>
    </div>
</div>
